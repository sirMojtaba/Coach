<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.consult.ConsultationTimeFragment">

    <com.example.coach.widget.MyButton
        android:id="@+id/button_start_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_public_package_shape1"
        android:backgroundTint="@color/colorPrimaryDark2"
        android:padding="4dp"
        android:text="01/01/1400"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/button_start_time"
        app:layout_constraintEnd_toStartOf="@+id/tv_date"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_until"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.coach.widget.MyTextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="از"
        app:layout_constraintBottom_toTopOf="@+id/button_start_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_start_date"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.coach.widget.MyButton
        android:id="@+id/button_end_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_public_package_shape1"
        android:backgroundTint="@color/colorPrimaryDark2"
        android:padding="4dp"
        android:text="01/01/1400"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/button_end_time"
        app:layout_constraintEnd_toStartOf="@+id/tv_until"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.coach.widget.MyTextView
        android:id="@+id/tv_until"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="تا"
        app:layout_constraintBottom_toTopOf="@+id/button_end_time"
        app:layout_constraintEnd_toStartOf="@+id/button_start_date"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_end_date"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.coach.widget.MyButton
        android:id="@+id/button_start_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_public_package_shape1"
        android:backgroundTint="@color/colorPrimaryDark2"
        android:padding="4dp"
        android:text="19:30"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_time"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_until_time"
        app:layout_constraintTop_toBottomOf="@+id/button_start_date" />

    <com.example.coach.widget.MyButton
        android:id="@+id/button_end_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_public_package_shape1"
        android:backgroundTint="@color/colorPrimaryDark2"
        android:elevation="10dp"
        android:padding="4dp"
        android:text="20:15"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_until_time"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/button_end_date" />

    <com.example.coach.widget.MyTextView
        android:id="@+id/tv_until_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:text="تا"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_start_time"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_end_time"
        app:layout_constraintTop_toBottomOf="@+id/button_start_date" />

    <com.example.coach.widget.MyTextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="از"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_start_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_date" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_tv_round_corners"
        android:drawableEnd="@drawable/ic_calendar"
        android:gravity="center"
        android:padding="4dp"
        android:text="تاریخ مشاوره"
        app:layout_constraintBottom_toTopOf="@+id/button_start_date"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/guideline4" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_tv_round_corners"
        android:gravity="center"
        android:padding="4dp"
        android:text="زمان مشاوره"
        app:layout_constraintBottom_toTopOf="@+id/button_start_time"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <com.example.coach.widget.MyButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_public_package_shape1"
        android:backgroundTint="@color/colorPrimary"
        android:text="تایید"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        tools:layout_editor_absoluteY="487dp" />


</androidx.constraintlayout.widget.ConstraintLayout>