<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/ic_main_activity_coach_consulation_custom_shape">

    <ImageView
        android:id="@+id/imageview_trainee_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@id/layout_root"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_custom_avatar"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/textview_trainee_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintEnd_toStartOf="@+id/imageview_trainee_image"
        app:layout_constraintRight_toLeftOf="@id/imageview_trainee_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageview_trainee_image"
        tools:text="مجتبی حسن زاده" />
    <!--<TextView
        android:id="@+id/textview_trainee_short_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/imageview_trainee_image"
        app:layout_constraintTop_toBottomOf="@id/textview_trainee_name"
        tools:text="28 ساله مجرد گروه خونی +A" />-->


</androidx.constraintlayout.widget.ConstraintLayout>