<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.trainee.TraineeDetailsFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp"
        app:layout_constraintStart_toStartOf="parent" />


    <com.example.coach.widget.MyTextView
        android:id="@+id/text_view_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/text_view_background"
        android:gravity="center"
        android:padding="4dp"
        android:text="نام: مجتبی حسن زاده"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/button_ticket"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.coach.widget.MyTextView
        android:id="@+id/text_view_gender"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_view_background"
        android:padding="4dp"
        android:text="جنسیت: آقا"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_name" />

    <com.example.coach.widget.MyTextView
        android:id="@+id/text_view_age"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_view_background"
        android:padding="4dp"
        android:text="سن: 28"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_gender" />

    <com.example.coach.widget.MyTextView
        android:id="@+id/text_view_stature"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_view_background"
        android:padding="4dp"
        android:text="قد: 170"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_age" />

    <com.example.coach.widget.MyTextView
        android:id="@+id/text_view_weight"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_view_background"
        android:padding="4dp"
        android:text="وزن: 68"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_stature" />

    <com.example.coach.widget.MyButton
        android:id="@+id/button_package"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_public_package_shape1"
        android:backgroundTint="@color/colorPrimary"
        android:text="پکیج ها"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_ticket"
        tools:layout_editor_absoluteY="362dp" />

    <com.example.coach.widget.MyButton
        android:id="@+id/button_ticket"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_public_package_shape1"
        android:backgroundTint="@color/colorPrimary"
        android:text="تیکت ها"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/button_package"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_consult"
        tools:layout_editor_absoluteY="362dp" />

    <com.example.coach.widget.MyButton
        android:id="@+id/button_consult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_public_package_shape1"
        android:backgroundTint="@color/colorPrimary"
        android:text="مشاوره ها"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/button_ticket"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        tools:layout_editor_absoluteY="362dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/text_view_name"
        app:layout_constraintEnd_toStartOf="@+id/guideline1"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:srcCompat="@drawable/ic_custom_avatar"
        tools:src="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>